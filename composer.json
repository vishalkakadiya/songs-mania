{
  "name": "carlalexander/passwords-evolded",
  "description": "WordPress password authentication for the modern era",
  "keywords" : [ "wordpress", "passwords", "security", "authentication", "password enforcement", "hibp", "have i been pwned" ],
  "type" : "wordpress-plugin",
  "authors" : [
    {
      "name": "Carl Alexander",
      "email": "contact@carlalexander.ca",
      "homepage": "https://carlalexander.ca"
    }
  ],
  "license": "GPL-3.0+",
  "require": {
    "php": ">=5.3.7"
  },
  "require-dev": {
    "behat/mink-goutte-driver": "^1.2",
    "doctrine/instantiator": "1.0.5",
    "jakub-onderka/php-parallel-lint": "^1.0",
    "malukenho/kawaii-gherkin": "^0.1.3",
    "paulgibbs/behat-wordpress-extension": "^1.0",
    "php-mock/php-mock-phpunit": "^0.3",
    "phpdocumentor/reflection-docblock": "2.0.5",
    "phpmd/phpmd": "^2.6",
    "phpro/grumphp": "^0.14.0",
    "sebastian/phpcpd": "^3.0",
    "squizlabs/php_codesniffer": "^3.2",
    "wp-cli/wp-cli": "~1.5"
  },
  "autoload": {
    "classmap": ["features/"],
    "psr-4": {
      "PasswordsEvolved\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PasswordsEvolved\\Tests\\": "tests/PasswordsEvolved/"
    }
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  }
}
